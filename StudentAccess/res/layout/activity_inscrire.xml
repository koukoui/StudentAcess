<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inscrire"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InscrireActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
     
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/formation" />

            <EditText
                android:id="@+id/txtnom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:ems="10"
                android:hint="Nom" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/txtprenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtnom"
                android:layout_below="@+id/txtnom"
                android:ems="10"
                android:hint="Prénom" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Diplôme"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/cbbac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:text="BAC" />

            <CheckBox
                android:id="@+id/cblicence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LICENCE PRO" />

            <CheckBox
                android:id="@+id/cbmaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MASTER" />

            <EditText
                android:id="@+id/txtformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Entrer la formation" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cbbac"
                android:layout_toRightOf="@+id/textView1"
                android:text="Genre"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <RadioButton
                    android:id="@+id/rbfeminin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Féminin" />

                <RadioButton
                    android:id="@+id/rbmasculin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Masculin" />
            </RadioGroup>

            <EditText
                android:id="@+id/txtloginInscr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cbmaster"
                android:layout_below="@+id/cbmaster"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:hint="Créer Login" />

            <EditText
                android:id="@+id/txtpasswordInscr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtloginInscr"
                android:layout_below="@+id/txtloginInscr"
                android:ems="10"
                android:hint="Créer Password"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/btninscrire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bouton_valider" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>